{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
          "*": [
            "node_modules/*",
            "src/types/*"
          ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}

